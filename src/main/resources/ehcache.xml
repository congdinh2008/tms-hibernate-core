<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 
                            http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Default cache template -->
    <cache-template name="default">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
        </resources>
    </cache-template>

    <!-- Entity cache template for rarely changed entities -->
    <cache-template name="entityCache">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache-template>

    <!-- Query cache template -->
    <cache-template name="queryCache">
        <key-type>java.lang.Object</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache-template>

    <!-- Project entity cache (rarely changed) -->
    <cache alias="com.congdinh2008.tms.entity.Project" uses-template="entityCache">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">200</heap>
        </resources>
    </cache>

    <!-- Tag entity cache (rarely changed) -->
    <cache alias="com.congdinh2008.tms.entity.Tag" uses-template="entityCache">
        <expiry>
            <ttl unit="hours">2</ttl>
        </expiry>
        <resources>
            <heap unit="entries">100</heap>
        </resources>
    </cache>

    <!-- Project-User relationship cache -->
    <cache alias="com.congdinh2008.tms.entity.Project.members" uses-template="entityCache">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
    </cache>

    <!-- Task-Tag relationship cache -->
    <cache alias="com.congdinh2008.tms.entity.Task.tags" uses-template="entityCache">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
    </cache>

    <!-- Query cache regions -->
    <cache alias="default-query-results-region" uses-template="queryCache"/>
    <cache alias="project-query-cache" uses-template="queryCache">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
    </cache>
    <cache alias="tag-query-cache" uses-template="queryCache">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
    </cache>

    <!-- Default update timestamps cache -->
    <cache alias="default-update-timestamps-region">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Long</value-type>
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap unit="entries">10000</heap>
        </resources>
    </cache>

</config>
